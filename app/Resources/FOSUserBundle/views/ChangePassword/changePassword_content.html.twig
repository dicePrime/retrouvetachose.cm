{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_change_password'), 'attr': {'class': 'form-horizontal well'} } ) }}

    {#{{ form_widget(form) }}#}
 
         {{ form_row(form._token) }}

    <div class="form-group">
        <label class="col-xs-12 col-sm-3 control-label">
            {{ "form.current_password"|trans }}
        </label>
        <div class="col-xs-12 col-sm-5">
            {{ form_widget(form.current_password,{'attr':{'class':'form-control'} }) }}
        </div>
    </div>
    <div class="form-group">               
        <label class="col-xs-12 col-sm-3 control-label">
            {{ "form.new_password"|trans }}
        </label>
        <div class="col-xs-12 col-sm-5">
            {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control'} })}}
        </div>

    </div>
    <div class="form-group">               
        <label class="col-xs-12 col-sm-3 control-label">
            {{ "form.new_password_confirmation"|trans }}
        </label>
        <div class="col-xs-12 col-sm-5">
            {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control'} })}}
        </div>

    </div>
     <div class="form-group">
        <div class="col-xs-12 col-sm-offset-3">
            <input type="submit" class="btn rTCGreen" value='{{ "change_password.submit"|trans}}'/>
        </div>

    </div>
{{ form_end(form) }}
