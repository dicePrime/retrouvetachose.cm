<div id="accordion" class="panel-group" style='padding-left: 15px;'>   
                            <a  data-toggle="collapse"  data-parent="#accordion" href="#formulaire" class="btn rTCGreen rTCWhiteText">
                    <span class='glyphicon glyphicon-search'></span>
                 </a>                        
        <div class="panel-collapse collapse" id="formulaire">
            <div class="panel-body">

                {{ form_start(form, {'attr':{'class':'form-horizontal','data-toggle':'validator','role':'form'} }) }}
                {{ form_errors(form) }}

               
                    <div class="form-group">

                        <div class="co-xs-12 col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon">{{ "index.nature"|trans|upper }}</span>
                                {{ form_widget(form.nature,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon">{{ "index.categorie"|trans|upper }}</span>
                                {{ form_widget(form.categorie,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">      
                        <div class="co-xs-12 col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon">{{ "index.ville"|trans|upper }}</span>
                                {{ form_widget(form.ville,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>     

                        <div class="col-xs-12 col-sm-5">
                            <div class="input-group">
                                <span class="input-group-addon">{{ "index.espace"|trans|upper }}</span>
                                {{ form_widget(form.espace,{'attr':{'class':'form-control'} }) }}
                            </div>
                        </div>
                             <div class="col-sm-1" id="loading" hidden><img src="{{ asset('img/ajax_loader.gif') }}" height="30" width="30"/></div>

                    </div>
                    <div class="form-group">
                        <div class="col-sm-6">
                            <div class="input-group date" id="dateDebut">
                                <span class="input-group-addon">{{ "index.du"|trans|upper }}</span>
                                {{ form_widget(form.debut,{'attr':{'class':'form-control'} }) }}
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                        </div>       


                        <div class="col-sm-6">
                            <div class="input-group date" id="dateFin">
                                <span class="input-group-addon">{{ "index.au"|trans|upper }}</span>
                                {{ form_widget(form.fin,{'attr':{'class':'form-control'} }) }}
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-3 col-sm-4 col-sm-offset-2">
                            <label class="checkbox-inline">
                                {{ form_widget(form.avecRecompense) }} <strong>
                                    {{ "index.recompense"|trans }}
                                </strong>
                            </label>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                            <button type="submit" class="btn rTCGreen"><span class="glyphicon glyphicon-search"></span> {{ "index.chercher"|trans|upper}}</button>
                        </div>
                    </div>
               
            </div>
        </div>

        {{ form_end(form) }}
    
</div>